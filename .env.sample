#API CONFIGURATION
API_HOST=azure  # [azure|ollama|openai|github]

#AZURE CONFIGURATION
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE-NAME.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-api-key-here
AZURE_OPENAI_VERSION=2024-03-01-preview  # Check for latest API version

#  OLLAMA CONFIGURATION
OLLAMA_ENDPOINT=http://localhost:11434/v1  # Default local endpoint
OLLAMA_MODEL=llama3.1  # Recommended: llama3, mistral, or phi3

#OPENAI CONFIGURATION
OPENAI_API_KEY=your-openai-api-key-here  # From platform.openai.com
OPENAI_MODEL=gpt-3.5-turbo  # Alternatives: gpt-4-turbo, gpt-4o

#CONFIGURATION
GITHUB_API_KEY=your-github-api-key-here  # For GitHub Copilot/API
GITHUB_MODEL=gpt-4o  # GitHub's default model